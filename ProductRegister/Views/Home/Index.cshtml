@model ProductRegister.Models.CategoryModel

@{
    ViewData["Title"] = "Category";
}


<h1>Product Registration Details</h1>
<br />
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded pl-2 pr-2 pb-2 pt-3 mt-">
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group d-flex justify-content-center h-100">
                    <label asp-for="ProductName"> </label>&nbsp;&nbsp;&nbsp;
                    <input type="text" asp-for="ProductName">
                    <br />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <br /><br />

                <div class="form-group">
                    <div class="d-flex justify-content-center h-100">
                        <label asp-for="Description"> </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="text" name="Description" id="Description">
                        <br />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <div class="d-flex justify-content-center h-100">
                        <label asp-for="Category"> </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <Select type="text" name="Category" id="Category">
                            <option value="Electronic">Electronics</option>
                            <option value="Fashions">Fashion</option>
                            <option value="Furniture">Furniture</option>
                            <option value="Home Appliances">Home Appliances</option>
                        </Select>
                    </div>
                    <br />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <br /> <br />
                <div class="form-group">
                    <div class="d-flex justify-content-center h-250">
                        <label>Price &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                        <input type="text" name="Price" id="Price">
                    </div>
                    <br />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <br />

                <br />
                <div class="form-group">
                    <div class="d-flex justify-content-center h-100">
                        <button type="submit" class="btn btn-primary" style="width:80px">Save</button>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <button type="reset" onclick="this.form.reset();return false" class="btn btn-secondary">Cancel</button>
                    </div>
                </div>



            </form>
        </div>
    </div>
</div>